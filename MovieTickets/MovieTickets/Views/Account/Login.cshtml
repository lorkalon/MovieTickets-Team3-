@model FoodsShop.Models.AccountModels.LoginViewModel
@{
    ViewBag.Title = "Login page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ReturnUrl = "../Account/Login";
}
<div class="row-fluid">
    <div class="span10 offset2">
        <div class="row-fluid">
            <h4>Log in</h4>
        </div>
        <div class="error-box">
            @Html.ValidationSummary()
        </div>
        <div class="row-fluid">
            @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }))
            {
                Html.ValidateFor(login => login.Email);
                Html.ValidateFor(login => login.Password);
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
                <div class="row-fluid">
                    <input type="submit" name="login" value="LogIn" class="btn btn-primary" />
                </div>
            }
            @Html.ActionLink("Registration", "Registration", "Account", new { }, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
